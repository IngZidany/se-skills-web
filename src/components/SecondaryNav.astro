---
export interface Props {
	currentSection?: string;
}

const { currentSection = "" } = Astro.props;
---

<nav class="bg-gray-100 shadow-sm">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="flex justify-center h-12">
			<div class="flex items-center space-x-8">
				<a href="#knowledge" class={`nav-link ${currentSection === 'knowledge' ? 'nav-link-active' : ''}`}>
					Knowledge
				</a>
				<a href="#biblioteca" class={`nav-link ${currentSection === 'biblioteca' ? 'nav-link-active' : ''}`}>
					Biblioteca
				</a>
				<a href="#progreso" class={`nav-link ${currentSection === 'progreso' ? 'nav-link-active' : ''}`}>
					Progreso
				</a>
			</div>
		</div>
	</div>
</nav>

<script>
	// Smooth scrolling for anchor links
	document.querySelectorAll('a[href^="#"]').forEach(anchor => {
		anchor.addEventListener('click', function (e) {
			e.preventDefault();
			const target = document.querySelector(this.getAttribute('href'));
			if (target) {
				target.scrollIntoView({
					behavior: 'smooth',
					block: 'start'
				});
			}
		});
	});
</script> 